# HR Recruitment System - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Application Settings
# ============================================
APP_NAME=AI Powered HR Assistant
DEBUG=False
HOST=0.0.0.0
PORT=8000

# ============================================
# Database Configuration
# ============================================
# For development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./hr_recruitment.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/hr_recruitment

# ============================================
# Redis Configuration (Optional)
# ============================================
# Redis is used for token blacklist and caching
# If not available, the app will use in-memory fallback
REDIS_URL=redis://localhost:6379/0

# ============================================
# JWT Token Configuration
# ============================================
# Generate a secure secret key with:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=dev-secret-key-change-in-production-use-secrets-token-urlsafe-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Email Configuration (SendGrid)
# ============================================
# Optional for development (emails will be logged to console)
# Required for production
SENDGRID_API_KEY=
SENDER_EMAIL=noreply@hrrecruitment.com
SENDER_NAME=HR Recruitment System

# ============================================
# Frontend Configuration
# ============================================
# URL for email links (verification, password reset)
FRONTEND_URL=http://localhost:8000

# ============================================
# Security Settings
# ============================================
PASSWORD_MIN_LENGTH=8
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15
PASSWORD_HISTORY_COUNT=5

# ============================================
# File Upload Settings (Existing)
# ============================================
MAX_UPLOAD_SIZE=10485760
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
RESULTS_DIR=results
TEMP_DIR=temp

# ============================================
# AI/Gemini Settings (Existing)
# ============================================
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# ============================================
# Processing Settings (Existing)
# ============================================
MAX_PAGES_OCR=5
OCR_CONFIDENCE_THRESHOLD=0.7
