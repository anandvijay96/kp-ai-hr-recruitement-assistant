# Application Settings
APP_NAME="AI Powered HR Assistant"
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Database Settings
# For SQLite (Development):
DATABASE_URL=sqlite:///./hr_assistant.db

# For PostgreSQL (Production):
# DATABASE_URL=postgresql://username:password@localhost:5432/hr_assistant_db

DATABASE_ECHO=False

# Celery Settings (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=300

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".pdf", ".doc", ".docx"]
UPLOAD_DIR=uploads

# Storage Settings
RESULTS_DIR=results
TEMP_DIR=temp

# AI/ML Settings (Optional)
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-pro

# Google Search API Settings (Optional - for LinkedIn verification)
# Get these from: https://console.cloud.google.com/apis/credentials
# Create a Custom Search Engine at: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Google OAuth Settings (for user-provided API keys via OAuth)
# Get these from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID (Web application)
GOOGLE_OAUTH_CLIENT_ID=your_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Security Settings (CHANGE IN PRODUCTION!)
# Generate JWT secret: openssl rand -hex 32
# Generate encryption key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
JWT_SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
