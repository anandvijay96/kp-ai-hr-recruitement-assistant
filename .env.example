# ============================================
# AI HR ASSISTANT - LOCAL DEVELOPMENT ENVIRONMENT
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ============================================
# Application Settings
# ============================================
APP_NAME=AI Powered HR Assistant
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ============================================
# Database Configuration
# ============================================
# For development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./hr_assistant.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/hr_assistant

# Database Settings
DATABASE_ECHO=False
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================
# Redis Configuration (Optional)
# ============================================
# Redis is used for token blacklist and caching
# If not available, the app will use in-memory fallback
REDIS_URL=redis://localhost:6379/0

# ============================================
# JWT Token Configuration
# ============================================
# Generate a secure secret key with:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production-use-secrets-token-urlsafe-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Email Configuration (SendGrid)
# ============================================
# Optional for development (emails will be logged to console)
# Required for production
SENDGRID_API_KEY=
SENDER_EMAIL=noreply@hrrecruitment.com
SENDER_NAME=HR Recruitment System

# ============================================
# Frontend Configuration
# ============================================
# URL for email links (verification, password reset)
FRONTEND_URL=http://localhost:8000

# ============================================
# Security Settings
# ============================================
PASSWORD_MIN_LENGTH=8
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15
PASSWORD_HISTORY_COUNT=5

# ============================================
# File Upload Settings
# ============================================
MAX_UPLOAD_SIZE=10485760
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
RESULTS_DIR=results
TEMP_DIR=temp

# ============================================
# AI/LLM Settings for Resume Extraction (REQUIRED)
# ============================================
# Google Gemini (FREE tier: 1000 RPD, 15 RPM, 250K TPM)
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# OpenAI (Paid - gpt-4o-mini is cheap: $0.15/1M input, $0.60/1M output)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Default LLM provider for extraction (gemini or openai)
DEFAULT_LLM_PROVIDER=gemini

# ============================================
# LinkedIn Verification Settings
# ============================================
# Enable Selenium-based LinkedIn verification via DuckDuckGo
USE_SELENIUM_VERIFICATION=True

# ============================================
# Processing Settings
# ============================================
MAX_PAGES_OCR=5
OCR_CONFIDENCE_THRESHOLD=0.7

# ============================================
# CORS Settings
# ============================================
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8000"]

# ============================================
# Session Management
# ============================================
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=False  # Set to True for HTTPS
SESSION_COOKIE_HTTPONLY=True

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# Feature Flags
# ============================================
ENABLE_LINKEDIN_VERIFICATION=True
ENABLE_JOB_HOPPING_DETECTION=True
ENABLE_SOFT_DELETE=True
ENABLE_LLM_USAGE_TRACKING=True

# ============================================
# Development Settings
# ============================================
RELOAD=True
RELOAD_DIRS=["templates", "static"]

# ============================================
# Testing Settings
# ============================================
TEST_DATABASE_URL=sqlite+aiosqlite:///./test_hr_assistant.db
TESTING=False
TEST_LOG_LEVEL=WARNING
